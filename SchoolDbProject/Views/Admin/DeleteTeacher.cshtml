@model CustomTeacher

<style>
    .flex {
        display: flex;
    }

    li {
        list-style-type: none;
        padding: 10px;
        height: 50px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    #li1 {
        width: 200px;
    }

    #submbtn {
        margin-left: 213px;
    }
</style>

<div>
    <form id="liform" asp-action="DeleteTeacher" asp-controller="Admin">
        <div class="flex">
            <div>
                <ul>
                    <li>
                        Choose teacher:
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        @Html.DropDownListFor(t => t.SelectedTeacher, new SelectList(Model.Teachers), " ", new { id = "li1", onchange = "getSelected1()" })
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        <div class="text-danger">@Html.ValidationMessageFor(t => t.SelectedTeacher)</div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="text-danger">
            @ViewBag.UsedInLessons
        </div>
        <div>
            <input id="submbtn" type="button" value="Delete Teacher" class="btn btn-outline-danger" />
        </div>
    </form>
</div>

<script defer type="text/javascript">
    submbtn.onclick = function () {
        document.getElementById("liform").submit();
    }
</script>