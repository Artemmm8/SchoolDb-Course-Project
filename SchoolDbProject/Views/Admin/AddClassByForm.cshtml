@model Class

<style>
    .flex {
        display: flex;
    }

    li {
        list-style-type: none;
        padding: 10px;
        height: 50px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    #submbtn {
        margin-left: 305px;
    }
</style>

<div>
    <form id="liform" asp-action="AddClassByForm" asp-controller="Admin">
        <div class="flex">
            <div>
                <ul>
                    <li>
                        <label asp-for="ClassName">Enter Class Name</label>
                    </li>
                    <li>
                        <label asp-for="NumberOfStudents">Enter Number Of Students</label>
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        @Html.TextBoxFor(c => c.ClassName, new { autocomplete = "off" })
                    </li>
                    <li>
                        @Html.TextBoxFor(c => c.NumberOfStudents, new { autocomplete = "off" })
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        <div class="text-danger">@Html.ValidationMessageFor(c => c.ClassName)</div>
                    </li>
                    <li>
                        <div class="text-danger">@Html.ValidationMessageFor(c => c.NumberOfStudents)</div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="text-danger">
            @ViewBag.ErrorMessage
        </div>
        <div>
            <input id="submbtn" type="button" value="Add Class" class="btn btn-outline-dark" />
        </div>
    </form>
</div>

<script defer type="text/javascript">
    submbtn.onclick = function () {
        document.getElementById("liform").submit();
    }
</script>