@model CustomStudent
<style>
    .flex {
        display: flex;
    }

    li {
        list-style-type: none;
        padding: 10px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    #submbtn {
        width: 328px;
    }

    #li4 {
        width: 100%;
    }
</style>

<div>
    <form asp-action="AddStudentByForm" asp-controller="Admin">
        <div class="flex">
            <div>
                <ul>
                    <li>
                        <label asp-for="StudentId">Enter Student Id</label>
                    </li>
                    <li>
                        <label asp-for="Email">Enter Email</label>
                    </li>
                    <li>
                        <label asp-for="Password">Enter Password</label>
                    </li>
                    <li>
                        <label asp-for="ClassName">Choose Class</label>
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        @Html.TextBoxFor(s => s.StudentId, new { autocomplete = "off", onchange = "getSelected()", id = "li1" })
                    </li>
                    <li>
                        @Html.TextBoxFor(s => s.Email, new { autocomplete = "off", onchange = "getSelected()", id = "li2" })
                    </li>
                    <li>
                        @Html.EditorFor(s => s.Password, new { id = "li3" })
                    </li>
                    <li>
                        @Html.DropDownListFor(cs => cs.ClassName, new SelectList(Model.Classes), " ", new { onchange = "getSelected()", id = "li4" })
                    </li>
                </ul>
            </div>
        </div>
        <div>
            <input id="submbtn" type="submit" value="Add Student" class="btn btn-outline-dark" disabled />
        </div>
    </form>
</div>
    
<script defer type="text/javascript">
    function getSelected() {
        if ($('#li4 option:selected').text() == ' ' || $('#li1').val() == '' || $('#li2').val() == '' || $('#li3').val() == '') {
            $("#submbtn").prop("disabled", true);
        }
        else {
            $("#submbtn").prop("disabled", false);
        }
    }
</script>