@model SchoolDbProject.LoginAndRegistraionModels.TeacherLoginModel

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #808080;
        padding: 12px;
    }

    .flex {
        display: flex;
    }

    li {
        list-style-type: none;
        padding: 10px;
    }

    #log {
        width: 100%;
    }
</style>

<form asp-action="TeacherLogin" asp-controller="Account">
    <div class="center">
        <div class="flex">
            <div>
                <ul>
                    <li>
                        <label asp-for="TeacherId">Enter Teacher Id</label>
                    </li>
                    <li>
                        <label asp-for="Password">Enter Password</label>
                    </li>
                </ul>
            </div>
            <div>
                <ul>
                    <li>
                        @Html.TextBoxFor(t => t.TeacherId, new { autocomplete = "off" })
                        <div class="text-danger">@Html.ValidationMessageFor(t => t.TeacherId)</div>
                    </li>
                    <li>
                        @Html.EditorFor(t => t.Password)
                        <div class="text-danger">@Html.ValidationMessageFor(t => t.Password)</div>
                    </li>
                </ul>
            </div>
        </div>
        
        <div class="text-danger">
            @ViewBag.ErrorMessage
        </div>
        <div class="form-group">
            <input id="log" type="submit" value="Login" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
